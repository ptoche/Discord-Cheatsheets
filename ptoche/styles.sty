% define section title colors
\colorlet{sectioncolor}{NavyBlue}
\colorlet{subsectioncolor}{MediumBlue}
\colorlet{subsubsectioncolor}{RoyalBlue}
% remove section title colors
\newcommand{\SuppressSectionColors}{%
  \colorlet{sectioncolor}{black}
  \colorlet{subsectioncolor}{black}
  \colorlet{subsubsectioncolor}{black}
}%

% set section spaces
\RequirePackage{titlesec}
% default: \titlespacing*{\section}{0pt}{3.5ex plus 1ex minus .2ex}{2.3ex plus .2ex}
\titlespacing{\section}{0pt}{2.0ex plus .5ex minus .2ex}{1.0ex plus .2ex}
\titleformat{\section}
  {\color{sectioncolor}\normalfont\scshape\large\bfseries}
  {\thesection}
  {1em}
  {}
% default: \titlespacing*{\subsection}{0pt}{3.25ex plus 1ex minus .2ex}{1.5ex plus .2ex}
\titlespacing{\subsection}{0pt}{1.75ex plus .5ex minus .2ex}{0.75ex plus .2ex}
\titleformat{\subsection}
  {\color{subsectioncolor}\normalfont\normalsize\bfseries}
  {\thesubsection}
  {1em}
  {}
% default: \titlespacing*{\subsubsection}{0pt}{12pt plus 4pt minus 2pt}{0pt plus 2pt minus 2pt}
\titlespacing{\subsubsection}{0pt}{1.5ex plus .5ex minus .2ex}{0.5ex plus .2ex}
\titleformat{\subsubsection}[runin]% [runin] suppresses line break
  {\color{subsubsectioncolor}\normalfont\small\bfseries}
  {\thesubsubsection}
  {1em}
  {}

% remove section title numbers
\newcommand{\SuppressSectionNumbers}{%
  \makeatletter
  \let\oldsection\section
  \renewcommand\section{\@ifstar{\oldsection}{\oldsection*}}
  \let\oldsubsection\subsection
  \renewcommand\subsection{\@ifstar{\oldsubsection}{\oldsubsection*}}
  \let\oldsubsubsection\subsubsection
  \renewcommand\subsubsection{\@ifstar{\oldsubsubsection}{\oldsubsubsection*}}
  \makeatother
}%
